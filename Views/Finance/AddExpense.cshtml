@model FinanceManager.Models.Expense
@{
    ViewData["Title"] = "Add Expense";
}

<h1>@ViewData["Title"]</h1>
<form asp-action="AddExpense">
    <div class="form-group">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" required/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"> </textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="col-sm-1 form-label"></label>
        <input type="number" step="0.01" asp-for="Price" class="form-control w-25" required />
    </div>
    <div class="form-group">
        <input type="Submit" value="Add Expense" class="btn btn-primary" />
    </div>
</form>
